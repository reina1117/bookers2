<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'books/book', book: @book %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <thead>
            <% @books.each do |book| %>
            <tr>
              <th>image</th>
              <th><%= link_to book.title, book_path(book.id) %></th>
              <th><%= book.body %></th>
              <th></th>
            </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
</main>